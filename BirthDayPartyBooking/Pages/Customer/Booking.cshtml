@page
@model BirthDayPartyBooking.Pages.Customer.BookingModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post" asp-page-handler="FormOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Order.PlaceId" class="control-label"></label>
                <select asp-for="Order.PlaceId" class="form-control" asp-items="ViewBag.PlaceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Order.TotalPrice" class="control-label"></label>
                <input type="hidden" asp-for="Order.TotalPrice" />
                <input id="totalPrice" value="$@Model.Order.TotalPrice" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Order.Date" class="control-label"></label>
                <input asp-for="Order.Date" type="date" class="form-control" value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")"
                       type="date" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Order.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Note" class="control-label"></label>
                <input asp-for="Order.Note" class="form-control" />
                <span asp-validation-for="Order.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <span asp-validation-for="Order" class="text-danger"></span>
        </form>
    </div>
</div>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDetails[0].Service.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDetails[0].Service.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDetails[0].Number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDetails[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDetails[0].Service.ServiceType)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.ServiceType.Name)
                    </td>
                </tr>
            }
            <form method="post" asp-page-handler="FormDetail">
            <tr>
                <td colspan="2">
                    <div class="form-group">
                        <select asp-for="OrderDetail.ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                    </div>
                </td>
                <td>
                    <input asp-for="Number" id="numberInput" class="form-control" value="1" type="number" min="1" />
                </td>
                <td>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </td>
            </tr>
            </form>
        </tbody>
    </table>
</div>
<div>
    <form method="post" asp-page-handler="ClearDetail">
        <div class="form-group">
            <input type="submit" value="Clear" class="btn btn-secondary" />
        </div>
    </form>
</div>
<div>
    <form method="post" asp-page-handler="Back">
        <div class="form-group">
            <input type="submit" value="Back to List" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            updateNumberInput();
            updateTotalPrice();
            function updateNumberInput() {
                var selectedValue = $('#OrderDetail_ServiceId').val(); 
                var selectedText = $('#OrderDetail_ServiceId option[value="' + selectedValue + '"]').text();
                var serviceType = selectedText.split(' - ')[0];

                if (serviceType !== 'Dish') {
                    $('#numberInput').prop('disabled', true);
                    $('#numberInput').val(1);
                    @Model.Number = 1;
                } else {
                    $('#numberInput').prop('disabled', false);
                    $('#numberInput').val(1);
                }
            }

            function updateTotalPrice() {
                var selectedValue = $('#Order_PlaceId').val();
                var placePriceText = $('#Order_PlaceId option[value="' + selectedValue + '"]').text().split(' - ')[1];
                var placePriceNumeric = parseFloat(placePriceText.replace(/[^\d.]/g, ''));
                var totalPrice = parseInt('@Model.Order.TotalPrice'.replace('$', '')) + parseInt(placePriceNumeric);
                $('#totalPrice').val('$'+totalPrice.toString());
            }

            $('#Order_PlaceId').change(function () {
                updateTotalPrice();
            });

            $('#OrderDetail_ServiceId').change(function () {
                updateNumberInput();
            });
        });
    </script>
}
