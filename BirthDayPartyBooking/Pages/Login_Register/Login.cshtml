@page
@model BirthDayPartyBooking.Pages.Login_Register.LoginPageModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div class="form-group">
        <label for="Email">Email:</label>
        <input id="Email" asp-for="Email" class="form-control" type="email" />
    </div>
    <div class="form-group">
        <label for="Password">Password:</label>
        <input id="Password" asp-for="Password" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary" asp-page-handler="Login">Login</button>
        <button type="submit" class="btn btn-secondary" asp-page-handler="Register">Register</button>
    </div>
</form>
