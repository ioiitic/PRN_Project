@page
@using BusinessObject
@model BirthDayPartyBooking.Pages.HistoryBookingModel
@{
}
<html>
<head>
    <title>Host Detail Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div>
        <div>
            <h2>List Service    </h2>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Service_ID</th>
                    <th scope="col">Order_ID</th>
                    <th scope="col">Price</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (OrderDetail order_detail in Model.HistoryBooking)
                {
                    <tr>
                        <th scope="row">@order_detail.Service</th>
                        <td>@order_detail.Order</td>
                        <td>@order_detail.Price</td>
                       
                        <td>
                            <button type="button" class="btn btn-primary btn-sm">View</button>
                            <button type="button" class="btn btn-secondary btn-sm">Change</button>
                        </td>

                    </tr>
                }



            </tbody>
        </table>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>